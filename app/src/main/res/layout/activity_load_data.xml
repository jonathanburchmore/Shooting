<?xml version="1.0" encoding="utf-8"?>
<ScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin">

	<GridLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:rowCount="7"
			android:columnCount="3"
			android:useDefaultMargins="true"
			android:layout_gravity="center_horizontal">

		<!-- Caliber -->
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:layout_row="0"
				android:layout_column="0"
				android:textColor="@android:color/holo_blue_dark"
				android:text="@string/label_load_data_caliber" />

		<org.offline.shooting.TabbableAutoCompleteTextView
				android:id="@+id/load_data_caliber"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_row="0"
				android:layout_column="1"
				android:layout_columnSpan="2"
				android:layout_gravity="left"
				style="@style/AutoCompleteTextView.Regular"
				android:ems="12"
				android:inputType="textCapWords|textNoSuggestions"
				android:hint="@string/hint_required">
			<requestFocus />
		</org.offline.shooting.TabbableAutoCompleteTextView>

		<!-- Bullet -->
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:layout_row="1"
				android:layout_column="0"
				android:textColor="@android:color/holo_blue_dark"
				android:text="@string/label_load_data_bullet" />

		<org.offline.shooting.TabbableAutoCompleteTextView
				android:id="@+id/load_data_bullet"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_row="1"
				android:layout_column="1"
				android:layout_columnSpan="2"
				android:layout_gravity="left"
				style="@style/AutoCompleteTextView.Regular"
				android:ems="12"
				android:inputType="textCapWords|textNoSuggestions"
				android:hint="@string/hint_required" />

		<!-- Powder -->
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:layout_row="2"
				android:layout_column="0"
				android:textColor="@android:color/holo_blue_dark"
				android:text="@string/label_load_data_powder" />

		<org.offline.shooting.TabbableAutoCompleteTextView
				android:id="@+id/load_data_powder"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_row="2"
				android:layout_column="1"
				android:layout_columnSpan="2"
				android:layout_gravity="left"
				style="@style/AutoCompleteTextView.Regular"
				android:ems="12"
				android:inputType="textCapWords|textNoSuggestions"
				android:hint="@string/hint_required" />

		<!-- Charge -->
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:layout_row="3"
				android:layout_column="0"
				android:textColor="@android:color/holo_blue_dark"
				android:text="@string/label_load_data_charge" />

		<EditText
				android:id="@+id/load_data_charge"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_row="3"
				android:layout_column="1"
				android:layout_columnSpan="2"
				android:layout_gravity="left"
				android:ems="4"
				android:inputType="numberDecimal"
				android:hint="@string/hint_required_short" />

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_row="3"
				android:layout_column="2"
				android:layout_gravity="left"
				android:textColor="@android:color/holo_blue_dark"
				android:text="@string/label_load_data_charge_grains" />

		<!-- Primer -->
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:layout_row="4"
				android:layout_column="0"
				android:textColor="@android:color/holo_blue_dark"
				android:text="@string/label_load_data_primer" />

		<org.offline.shooting.TabbableAutoCompleteTextView
				android:id="@+id/load_data_primer"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_row="4"
				android:layout_column="1"
				android:layout_columnSpan="2"
				android:layout_gravity="left"
				style="@style/AutoCompleteTextView.Regular"
				android:ems="12"
				android:inputType="textCapWords|textNoSuggestions"
				android:hint="@string/hint_optional" />

		<!-- OAL -->
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:layout_row="5"
				android:layout_column="0"
				android:textColor="@android:color/holo_blue_dark"
				android:text="@string/label_load_data_oal" />

		<EditText
				android:id="@+id/load_data_oal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_row="5"
				android:layout_column="1"
				android:layout_gravity="left"
				android:ems="4"
				android:inputType="numberDecimal"
				android:hint="@string/hint_required_short" />

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_row="5"
				android:layout_column="2"
				android:layout_gravity="left"
				android:textColor="@android:color/holo_blue_dark"
				android:text="@string/label_load_data_oal_inches" />

		<!-- Crimp -->
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_row="6"
				android:layout_column="0"
				android:layout_gravity="right"
				android:textColor="@android:color/holo_blue_dark"
				android:text="@string/label_load_data_crimp" />

		<EditText
				android:id="@+id/load_data_crimp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_row="6"
				android:layout_column="1"
				android:layout_columnSpan="2"
				android:layout_gravity="left"
				android:ems="8"
				android:inputType="textCapWords"
				android:hint="@string/hint_optional" />

	</GridLayout>
</ScrollView>
