<?xml version="1.0" encoding="utf-8"?>
<ScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin">

	<GridLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:rowCount="5"
			android:columnCount="2"
			android:useDefaultMargins="true"
			android:layout_gravity="center_horizontal">

		<!-- Date -->
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:layout_row="0"
				android:layout_column="0"
				android:textColor="@android:color/holo_blue_dark"
				android:text="@string/label_firearm_acquisition_date"/>

		<TextView
				android:id="@+id/firearm_acquisition_date"
				android:layout_row="0"
				android:layout_column="1"
				android:layout_gravity="left"
				android:ems="10"
				style="@style/DateSpinner"
				android:hint="@string/hint_required"/>

		<!-- From -->
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:layout_row="1"
				android:layout_column="0"
				android:textColor="@android:color/holo_blue_dark"
				android:text="@string/label_firearm_acquisition_from"/>

		<EditText
				android:id="@+id/firearm_acquisition_from"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_row="1"
				android:layout_column="1"
				android:layout_gravity="left"
				android:ems="12"
				android:inputType="textPersonName"
				android:hint="@string/hint_required">
			<requestFocus/>
		</EditText>

		<!-- License -->
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:layout_row="2"
				android:layout_column="0"
				android:textColor="@android:color/holo_blue_dark"
				android:text="@string/label_firearm_acquisition_license"/>

		<EditText
				android:id="@+id/firearm_acquisition_license"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_row="2"
				android:layout_column="1"
				android:layout_gravity="left"
				android:ems="12"
				android:inputType="textCapWords|textNoSuggestions"
				android:hint="@string/hint_optional"/>

		<!-- Address -->
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:layout_row="3"
				android:layout_column="0"
				android:textColor="@android:color/holo_blue_dark"
				android:text="@string/label_firearm_acquisition_address"/>

		<EditText
				android:id="@+id/firearm_acquisition_address"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_row="3"
				android:layout_column="1"
				android:layout_gravity="left"
				android:ems="12"
				android:minLines="2"
				android:inputType="textPostalAddress|textMultiLine"
				android:hint="@string/hint_optional"/>

		<!-- Price -->
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:layout_row="4"
				android:layout_column="0"
				android:textColor="@android:color/holo_blue_dark"
				android:text="@string/label_firearm_acquisition_price"/>

		<EditText
				android:id="@+id/firearm_acquisition_price"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_row="4"
				android:layout_column="1"
				android:layout_gravity="left"
				android:ems="5"
				android:inputType="numberDecimal"
				android:hint="@string/hint_optional"/>
	</GridLayout>
</ScrollView>
